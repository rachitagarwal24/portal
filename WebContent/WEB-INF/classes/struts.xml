<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <constant name="struts.devMode" value="true" />

   <package name="myhibernate" extends="struts-default">

      <action name="addPlayer" method="execute" class="com.portal.AddActionPlayer">
         <result name="success" type="redirect">listPlayers</result>
         <result name="error" type="redirect">register-error.jsp</result>  
      </action>
      
      
      <action name="listPlayers" method="listPlayers"
         class="com.portal.AddActionPlayer">
         <result name="success" type="redirect">/welcome.jsp</result>
      </action>
      
	</package>
</struts>

