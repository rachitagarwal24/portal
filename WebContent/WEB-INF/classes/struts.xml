<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <constant name="struts.devMode" value="true" />

   <package name="myhibernate" extends="struts-default">
      <action name="login">  
		<result>login.jsp</result>  
	  </action>  
     
      
      
      
      <action name="loginprocess" method="execute" class="com.portal.LoginAction">
      	 <result name="success">/hello.jsp</result>
         <result name="input" type="redirect">/student.jsp</result>
      </action>
      
      
      <action name="addPlayer" method="execute" class="com.portal.AddActionPlayer">
         <result name="success" type="redirect">listPlayer</result>
         <result name="error" type="redirect">register-error.jsp</result>  
      </action>
      
      
      <action name="listPlayer" method="listPlayers"
         class="com.portal.AddActionPlayer">
         <result name="success">/welcome.jsp</result>
         
      </action>
      
	</package>
</struts>

